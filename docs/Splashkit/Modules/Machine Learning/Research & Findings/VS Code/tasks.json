{
	"windows": {
		"options": {
			"shell": {
				"executable": "C:\\msys64\\msys2_shell.cmd",
				"args": ["-defterm", "-mingw64", "-here", "-no-start", "-c"]

			}
		}
	},
	"tasks": [
		{
			"type": "shell",
			"label": "cmake",
			"command": "'cmake -DCMAKE_BUILD_TYPE=Debug -G \"Ninja\"'",
			"options": {
				"cwd": "${workspaceFolder}\\projects\\cmake"
			},
			"osx": {
				"command": "cmake",
				"args": [
					"-DCMAKE_BUILD_TYPE=Debug",
					"."
				],
				"options": {
					"cwd": "${workspaceFolder}/projects/cmake/"
				}
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Compile",
			"command": "'ninja'",
			"options": {
				"cwd": "${workspaceFolder}\\projects\\cmake"
			},
			"osx": {
				"command": "make",
				"args": [],
				"options": {
					"cwd": "${workspaceFolder}/projects/cmake/"
				}
			},
			"problemMatcher": []
		},
		{
			"label": "Full Compile",
			"dependsOrder": "sequence",
			"dependsOn": [
				"cmake",
				"Compile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	],
	"version": "2.0.0"
}
